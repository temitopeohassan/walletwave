# WalletWave Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/walletwave
REDIS_URL=redis://localhost:6379

# Server Configuration
NODE_ENV=development
PORT=3000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY_SALT=your-api-key-salt-here

# Rate Limiting (Optional - defaults in code)
DEFAULT_RATE_LIMIT_REQUESTS=1000
DEFAULT_RATE_LIMIT_WINDOW_MS=900000

# API Key Expiration (Optional - defaults to no expiration)
DEFAULT_API_KEY_EXPIRATION_DAYS=365

# Logging
LOG_LEVEL=info
